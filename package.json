{
  "name": "dirs-to-txt-file",
  "version": "1.1.0",
  "description": "node app that takes a root directory and will write out all directories to a txt file. Future scope to create git commits for each write, to be eventually used as an external hard-drive lister",
  "keywords": [
    "directories",
    "directory list",
    "list directories",
    "subdirectories",
    "list directories recursively",
    "dir",
    "subdir"
  ],
  "main": "index.js",
  "dependencies": {
    "get-dirs": "^1.0.0",
    "is-valid-path": "^0.1.1",
    "yargs": "^6.5.0"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "tape": "^4.6.3"
  },
  "bin": {
    "dirs-to-txt-file": "./bin/dirs-to-txt-file"
  },
  "scripts": {
    "dev": "nodemon ./test/index.js -x 'npm test'",
    "test": "node ./test/index.js | faucet",
    "start": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zlot/dirs-to-txt-file.git"
  },
  "author": "Mark C Mitchell <mark@markcmitchell.net> (http://markcmitchell.net)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zlot/dirs-to-txt-file/issues"
  },
  "homepage": "https://github.com/zlot/dirs-to-txt-file#readme"
}
